{
  "manifest_version": 3,
  "name": "Goose Highlighter",
  "version": "1.5.0",
  "description": "Highlight text on web pages",
  "default_locale": "en",
  "permissions": [
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}